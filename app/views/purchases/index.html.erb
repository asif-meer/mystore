<%- model_class = Purchase -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %>
  <%= link_to 'new', new_product_purchase_path, :class => 'btn' %>
  </h1>
</div>
<div>
    <p>Product name: <%= @product.name %></p>
    <p>Product Supplier: <%= @product.supplier.company_name %></p>
    <p>Product Price: <%= @product.price %></p>
    <p>Product Stock: <%= @product.product_stock.quantity %></p>            
</div>
<table class="display" id="products">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= link_to purchase.id, edit_product_purchase_url(@product,purchase.id) %></td>
        <td><%= purchase.quantity %></td> 
        <td><%= purchase.created_at %></td>
        <td><%= link_to "Edit", edit_product_purchase_url(@product,purchase.id) %></td>                      
      </tr>
    <% end %>
  </tbody>
</table>

